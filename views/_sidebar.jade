nav#sidebar.navmenu.navmenu-fixed-left.offcanvas(role='navigation')
  .container-fluid
    .sidebar-container
      p.about= about

      h3.paneHeader
        span.header Galleries
        span :
        button(type='button')
          span(data-selector='galleries').togglePane.glyphicon.glyphicon-minus
      ul(data-selector='galleries').pane
        each section in sections
          if !section.galleries
            a(href= '#' + section.link)
              li= section.title
          else
            li.withSubsection
                span= section.title
                span :
              ul
                each gal in section.galleries
                  a(href='#' + gal.link)
                    li.subSection= gal.title
                    
      h3.paneHeader
        span.header Published Work
        span :
        button(type='button')
          span(data-selector='published').togglePane.glyphicon.glyphicon-plus
      ul(data-selector='published').pane
        each i in published
          if (i.link)
            a(href=i.link)
              li= i.publication
          else
            li= i.publication

      h3.paneHeader
        span.header Contact &amp; Inquiries
        span :
        button(type='button')
          span(data-selector='contact').togglePane.glyphicon.glyphicon-plus
      ul(data-selector='contact').pane
        - var mailUrl = "mailto:" + contact.email;
        - var telUrl = "tel:" + contact.phone;
        a(href=mailUrl)
          li= contact.email
        a(href=telUrl)
          li=contact.phone

    